{{ template "base/header" . }}

<div class="flex-col justify-center lg:flex-row">
  <div class="card flex-shrink-0 w-full shadow-xl bg-base-100">
    <div class="card-body">
      <form
              {{ if .Enabled }}
              action="/proxy/shut_down"
              {{ else }}
              action="/proxy/start"
              {{ end }}
              method="post">
        <label class="label"><span class="label-text">Address</span></label>
        <input type="text" name="Address" class="input input-sm input-bordered" value="localhost:8080">
        {{ if .Enabled }}
        <input type="submit" value="Stop proxy" class="btn btn-secondary btn-sm">
        {{ else }}
        <input type="submit" value="Start proxy" class="btn btn-primary btn-sm">
        {{ end }}
      </form>
      <form method="post" action="/chromedp/">
        <input type="submit" value="Start Browser" class="btn btn-ghost btn-sm">
      </form>
    </div>
  </div>
</div>

{{ template "base/footer" . }}
